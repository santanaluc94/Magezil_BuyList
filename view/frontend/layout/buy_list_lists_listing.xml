<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="customer_account"/>
    <head>
        <css src="Magezil_BuyList::css/listing/style.css" rel="stylesheet" type="text/css" />
    </head>
    <body>
        <referenceContainer name="content">
            <block name="buy.list.create" template="Magezil_BuyList::listing/modal/create.phtml" cacheable="false">
                <arguments>
                    <argument name="multiple_wishlist_create" xsi:type="object">Magezil\BuyList\ViewModel\View\Create</argument>
                </arguments>
            </block>
            <block class="Magezil\BuyList\Block\Listing" name="buy.list.listing" template="Magezil_BuyList::listing/list.phtml" cacheable="false" />
        </referenceContainer>
    </body>
</page>
